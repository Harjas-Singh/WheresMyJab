    "scripts": {
        "test": "jest",
        "start": "concurrently -n WEBPACK,TYPEGEN -c blue,green \"yarn run start-http\" \"yarn run typegen:watch\"",
        "start-http": "mkdir -p frontend/dist/ && cp -a frontend/public/* frontend/dist/ && webpack serve",
        "start-https": "mkdir -p frontend/dist/ && cp -a frontend/public/* frontend/dist/ && webpack serve --https",
        "start-docker": "mkdir -p frontend/dist/ && cp -a frontend/public/* frontend/dist/ &&  webpack serve --host 0.0.0.0",
        "build": "echo \"Building Webpack\" && NODE_ENV=production webpack --config webpack.config.js && cp -a frontend/public/* frontend/dist/",
        "firebase": "yarn build && firebase emulators:start",
        "prettier": "prettier --write \"./frontend/src/**/*.{js,ts,tsx,json,yml,css,scss}\"",
        "prettier:check": "prettier --check \"./**/*.{js,ts,tsx,json,yml,css,scss}\"",
        "typescript:check": "tsc",
        "typescript:clean": "tsc --build --clean",
        "eslint": "eslint frontend/src",
        "typegen:write": "kea-typegen write",
        "typegen:check": "kea-typegen check",
        "typegen:watch": "kea-typegen watch",
        "format:python": "black . && isort .",
        "format:js": "yarn prettier && yarn eslint --fix",
        "format": "yarn format:python && yarn format:js"
    },
